<%- include('partials/header',{title:"Welcome!", pageCSS:"css/Home.css"})%>

<nav class="navbar navbar-expand-md sticky-top navbar-dark">
    <a class="navbar-brand" href="#">Hi, <%= loggedInAccount.firstName %>!</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#options">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="options">
        <ul class="nav navbar-nav mb-3" role="tablist">

            <li class="nav-item mt-2">
                <a class="nav-link" data-toggle="pill" href="#patients" role="tab">Your Patients</a>
            </li>

            <li class="nav-item dropdown mt-2">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">Add a patient</a>
                <div class="dropdown-menu p-3 mt-2">
                    <form class="form-inline" action="/home" method="post">
                        <input type="search" class="form-control mb-2" placeholder="Search" name="searchQuery"><input type="submit" class="btn btn-info btn-sm">
                        <input type="hidden" data-toggle="pill" id="searchResult-tab" href="#searchResult" role="tab">
                    </form>
                </div>
            </li>

            <li class="nav-item dropdown mt-2">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">Keep yourself in check too!</a>
                <div class="dropdown-menu mt-2">
                    <a class="dropdown-item" data-toggle="tab" role="tab" href="#medRec">Your Medical Records</a>
                    <a class="dropdown-item" data-toggle="tab" role="tab" href="#orders">Your Orders</a>
                    <a class="dropdown-item" data-toggle="tab" role="tab" href="#reminders">Your Reminders</a>
                </div>
            </li>

            <li class="nav-item mt-2">
                <a class="nav-link" href="/logout" role="tab">Log Out</a>
            </li>
                 
        </ul>
    </div>
</nav>


<div class="tab-content">
    
    <div class="tab-pane fade show active" id="patients" role="tabpanel">

        <div class="card">
                <div class="card-header">
                    <h5>Your Patients</h5>
                </div>
            <ul class="list-group list-group-flush">
                <% for(let i=0;i<patientsList.length;i++){ %>
                    <li class="list-group-item"><%= patientsList[i].firstName %> <%= patientsList[i].lastName %></li>
                <% } %>
            
            </ul>
        </div>

    </div>
    <div class="tab-pane fade" id="searchResult" role="tabpanel">
        <div class="card">
                <div class="card-header">
                    <h5>Search Result</h5>
                </div>
                <div class="container-fluid">
                    <ul class="list-group list-group-flush">
                        <% for(let i=0;i<result.length;i++){ %>
                        <div class="row">          
                            <div class="col">
                                <li class="list-group-item"><%= result[i].firstName %> <%= result[i].lastName %></li>
                            </div>
                            <div class="col-auto my-auto">
                                <form action="/home/addPatient" method="post">
                                    <input type="hidden" name="patient_id" value= <%= result[i]._id %> >
                                    <input type="image" class="img-add" src="images/add.png" alt="+">
                                </form>
                            </div>
                        </div>
                        <% } %>
                    </ul>
                </div>
        </div>
        

    </div>
    <div class="tab-pane fade" id="medRec" role="tabpanel">
        Medical Records



    </div>
    <div class="tab-pane fade" id="orders" role="tabpanel">
        Your Orders



    </div>
    <div class="tab-pane fade" id="reminders" role="tabpanel">
        Reminders




    </div>
</div>
